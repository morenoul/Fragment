<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/redFragment"
        android:name="com.example.secondfragment.fragments.RedFragment"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        tools:layout="@layout/fragment_red" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/blueFragment"
        android:name="com.example.secondfragment.fragments.BlueFragment"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        tools:layout="@layout/fragment_blue" />

    
</LinearLayout>